@using CarSalesWebsite.ViewModels
@model CarInfoVM

@{
    ViewData["Title"] = "Info";
}

<div id="carImagesCarousel" class="carousel slide" data-bs-ride="carousel" style="width: 60%;">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.CarImages.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@Model.CarImages[i]" class="d-block w-100" alt="Car Image @(i + 1)">
            </div>
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carImagesCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#carImagesCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<p></p>
<p></p>
<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title">@Model.Make @Model.Model</h4>
        <p class="card-text">
            <strong>Year:</strong> @Model.Year<br>
            <strong>Mileage:</strong> @Model.Mileage km<br>
            <strong>Price:</strong> @Model.Price $<br>
            <strong>Transmission:</strong> @Model.Transmission<br>
            <strong>Fuel Type:</strong> @Model.FuelType<br>
            <strong>Body Type:</strong> @Model.BodyType<br>
            <strong>Color:</strong> @Model.Color<br>
            <strong>Engine Capacity:</strong> @Model.EngineCapacity L<br>
            <strong>Location:</strong> @Model.Location<br>
            <strong>Date Added / Edited:</strong> @Model.DateAdded.ToShortDateString()<br>
            <p></p>
            <p></p>
            <strong>Status: </strong>
            @if (Model.IsSold)
            {
                <strong style="color: red">Sold</strong>
            }
            else
            {
                <strong style="color: limegreen">Available</strong>
            }
        </p>

        <div class="car-description mt-4">
            <h5 class="description-title">Description</h5>
            <p>@Model.Description</p>
        </div>

        <div class="seller-contacts mt-4">
            <h5 class="description-title">Seller Contacts</h5>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">First Name:</th>
                        <td>
                            <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.User.Id">@Model.User.FirstName</a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Last Name:</th>
                        <td>@Model.User.LastName</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone Number:</th>
                        <td>@Model.User.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th scope="row">Email:</th>
                        <td>@Model.User.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
    #carImagesCarousel {
        margin: 0 auto;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Тень для выделения */
        border-radius: 8px; /* Скругленные углы */
        padding: 15px; /* Внутренний отступ */
        background-color: #fff; /* Белый фон */
    }

    .card-title {
        font-size: 1.5rem; /* Увеличенный размер шрифта для заголовка */
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
    }

        .card-text strong {
            font-weight: bold;
            color: #000; /* Черный цвет для выделения заголовков параметров */
        }

    .car-description {
        padding: 15px;
        background-color: #f8f9fa; /* Светлый серый фон */
        border: 1px solid #dee2e6; /* Легкая рамка */
        border-radius: 8px; /* Скругленные углы */
    }

    .description-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #343a40;
    }

    .car-description p {
        font-size: 1rem;
        color: #555;
        margin-top: 10px; /* Немного отступа сверху */
    }


    .seller-contacts {
        padding: 15px;
        background-color: #f8f9fa; /* Светло-серый фон */
        border: 1px solid #dee2e6; /* Легкая рамка */
        border-radius: 8px; /* Скругленные углы */
    }

        .seller-contacts h5 {
            font-size: 1.2rem;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 15px;
        }

    .table {
        margin-bottom: 0;
    }

        .table th {
            font-weight: bold;
            color: #343a40;
        }

        .table td {
            color: #555;
        }

</style>