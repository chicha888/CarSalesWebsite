@using CarSalesWebsite.ViewModels
@model RegisterVM

@{
    ViewData["Title"] = "Register";
}


<h2>Register page</h2>

<div class="row">
    <div class="col-md-8 offset-2">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName">First name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Your first name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Last name (optional)</label>
                        <input asp-for="LastName" class="form-control" placeholder="Your last name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Phone number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword1" placeholder="Confirm password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                        <button class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
